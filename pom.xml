	<groupId>br.edu.curso</groupId>
	<artifactId>ceshi</artifactId>
	<version>0.1-SNAPSHOT</version>
	<name>ct</name>
	<description>Ceshi significa a palavra 'teste' em mandarim</description>
	
	<build>
    	<pluginManagement>
	        <plugins>
	        	<!-- compiler -->
	            <plugin>
	                <groupId>org.apache.maven.plugins</groupId>
	                <artifactId>maven-compiler-plugin</artifactId>
	                <configuration>
	                    <source>1.6</source>
	                    <target>1.6</target>
	                </configuration>
	            </plugin>
	            <!-- flyway -->
	            <plugin>
	                <groupId>com.googlecode.flyway</groupId>
	                <artifactId>flyway-maven-plugin</artifactId>
	                <version>2.3</version>
	                <configuration>
	                    <url>jdbc:h2:file:target/h2</url>
	                    <user>sa</user>
	                    <validateOnMigrate>true</validateOnMigrate>
	                    <locations>
	                    	<location>db.migration</location>
	                    	<location>br.edu.curso.flyway.migrations</location>
	                    </locations>
	                </configuration>
	                <!-- pendente configuracao -->
					<executions>
						<execution>
                            <id>flyway-migrate</id>
                            <goals>
                                <goal>clean</goal>
                                <goal>migrate</goal>
                                <goal>status</goal>
                            </goals>
                            <phase>clean, install</phase>
                        </execution>
					</executions>
	                <dependencies>
	                    <dependency>
	                        <groupId>com.h2database</groupId>
	                        <artifactId>h2</artifactId>
	                        <version>1.3.170</version>
	                    </dependency>
	                </dependencies>
	            </plugin>
	        </plugins>
        </pluginManagement>
        
        <!-- diretorios do projeto -->
        <directory>target</directory>
	    <outputDirectory>target/classes</outputDirectory>
	    <testOutputDirectory>target/test-classes</testOutputDirectory>
	    <sourceDirectory>src/main/java</sourceDirectory>
	    <testSourceDirectory>src/test/java</testSourceDirectory>
	    <resources>
	      <resource>
	        <directory>src/main/res</directory>
	      </resource>
	    </resources>
	    <testResources>
	      <testResource>
	        <directory>src/test/res</directory>
	      </testResource>
	    </testResources>
	    
    </build>
	
